GET             /                               controllers.Dashboard.index()
GET             /pricing                        controllers.Pricing.index()


# Authentication
# ~~~~~~~~~~~~~~
GET             /login                          controllers.Application.login()
POST            /login                          controllers.Application.authenticate()
GET             /logout                         controllers.Application.logout()

# Position
# ~~~~~~~~~~~~~~
GET             /positions                      controllers.Positions.list()
GET             /positions/new                  controllers.Positions.create()
POST            /positions                      controllers.Positions.save()
GET             /positions/:id                  controllers.Positions.read(id:Long)
POST            /positions/:id                  controllers.Positions.update(id:Long)

# Position / Documents
# ~~~~~~~~~~~~~~
GET             /positions/:id/documents/new    controllers.Documents.create(id:Long, clazz: String, callback: String)
POST            /positions/:id/documents        controllers.Documents.save(id:Long, clazz: String, callback: String)

# Position / Lists
# ~~~~~~~~~~~~~~
GET             /a                              controllers.Positions.a()

# Applicant
# ~~~~~~~~~~~~~~
GET             /applicants                     controllers.Applicants.list()
GET             /applicants/:id                 controllers.Applicants.read(id:Long)
GET             /comet                          controllers.Applicants.index()

# Mail
# ~~~~~~~~~~~~~~
POST    /incoming_mail                          controllers.IncomingMail.incomingMail()

# Map static resources from the /public folder to the /assets URL path
GET             /assets/*file                   controllers.Assets.at(path="/public", file)